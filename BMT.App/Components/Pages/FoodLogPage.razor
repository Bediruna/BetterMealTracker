@page "/foodlog"
@layout BMT.App.Components.Layout.BlankLayout

<div class="food-log-page">
    <h1>Food Log</h1>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" @bind="SearchQuery" placeholder="Search for food..." />
        <button @onclick="PerformSearch">Search</button>
    </div>

    <!-- Search Results -->
    <div class="search-results">
        @if (SearchResults.Any())
        {
            <ul>
                @foreach (var food in SearchResults)
                {
                    <li>@food.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No results found.</p>
        }
    </div>
</div>